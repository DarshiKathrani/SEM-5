@model List<OrderDetailModel>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="fas fa-exclamation-triangle me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<style>
    .od-header { background: linear-gradient(135deg, #16a34a, #15803d); color:#fff; padding:2rem; border-radius:15px; margin-bottom:2rem; box-shadow:0 8px 32px rgba(21,128,61,.35); }
    .page-chip { background: rgba(255,255,255,.2); backdrop-filter: blur(10px); border:1px solid rgba(255,255,255,.3); color:#fff; font-weight:600; padding:.5rem 1rem; border-radius:25px; }
    .od-card { border:none; border-radius:15px; box-shadow:0 4px 20px rgba(0,0,0,.08); overflow:hidden; }
    .od-card-header { background: linear-gradient(135deg,#198754,#157347); color:#fff; padding:1.5rem; border:none; }
    .od-table thead th { background:#f8f9fa; border:none; font-weight:600; color:#495057; padding:1rem; text-transform:uppercase; font-size:.9rem; letter-spacing:.5px; }
    .od-table tbody tr { transition:.3s; border:none; }
    .od-table tbody tr:hover { background: linear-gradient(135deg, rgba(22,163,74,.05), rgba(21,128,61,.05)); transform: scale(1.01); }
    .btn-icon{ width:35px; height:35px; border-radius:50%; display:inline-flex; align-items:center; justify-content:center; transition:.3s; border:2px solid transparent; }
    .btn-edit{ background: linear-gradient(135deg,#198754,#157347); color:#fff; border-color:#198754; }
    .btn-delete{ background: linear-gradient(135deg,#dc3545,#b02a37); color:#fff; border-color:#dc3545; }
    .empty-state{ text-align:center; padding:3rem 2rem; color:#6c757d; }
    .empty-state i{ font-size:4rem; margin-bottom:1rem; opacity:.5; }
</style>

<div class="od-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="mb-2"><i class="fas fa-clipboard-list me-2"></i>Order Details</h1>
            <p class="mb-0 opacity-75">Inspect items and quantities for each order</p>
        </div>
        <span class="page-chip">@DateTime.Now.ToString("dd MMM yyyy")</span>
    </div>
</div>

<div class="od-card">
    <div class="od-card-header">
        <h5 class="mb-0"><i class="fas fa-list me-2"></i>Order Details List</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table od-table">
                <thead>
                    <tr>
                        <th>Order Detail ID</th>
                        <th>Order ID</th>
                        <th>Product ID</th>
                        <th>Quantity</th>
                        <th>Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.OrderDetailsID</td>
                                <td>@item.OrderID</td>
                                <td>@item.ProductID</td>
                                <td>@item.Quantity</td>
                                <td>@item.Status</td>
                                <td class="text-center">
                                    <a asp-action="AddEdit" asp-controller="OrderDetail" asp-route-id="@item.OrderDetailsID" class="btn btn-icon btn-edit me-1" title="Edit" data-bs-toggle="tooltip" data-bs-title="Edit"><i class="fas fa-edit"></i></a>
                                    <a asp-action="Delete" asp-controller="OrderDetail" asp-route-id="@item.OrderDetailsID" class="btn btn-icon btn-delete" title="Delete" data-bs-toggle="tooltip" data-bs-title="Delete" onclick="return confirm('Are you sure you want to delete this order detail?');"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="empty-state">
                                <i class="fas fa-clipboard-list"></i>
                                <h5>No order details found</h5>
                                <p class="text-muted">Once orders are created, their items will appear here.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
