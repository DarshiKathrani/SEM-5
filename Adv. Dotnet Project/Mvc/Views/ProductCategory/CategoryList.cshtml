@model List<ProductCategoryModel>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="fas fa-exclamation-triangle me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<style>
    .cat-header {
        background: linear-gradient(135deg, #16a34a 0%, #15803d 100%);
        color: white;
        padding: 2rem;
        border-radius: 15px;
        margin-bottom: 2rem;
        box-shadow: 0 8px 32px rgba(21, 128, 61, 0.35);
    }

    .page-chip {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: white;
        font-weight: 600;
        padding: 0.5rem 1rem;
        border-radius: 25px;
    }

    /* search removed per request */

    .category-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        overflow: hidden;
    }

        .category-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
        }

    .category-header {
        background: linear-gradient(135deg, #198754 0%, #157347 100%);
        color: white;
        padding: 1.5rem;
        border: none;
    }

    .category-table {
        margin: 0;
    }

        .category-table thead th {
            background: #f8f9fa;
            border: none;
            font-weight: 600;
            color: #495057;
            padding: 1rem;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .category-table tbody tr {
            transition: all 0.3s ease;
            border: none;
        }

            .category-table tbody tr:hover {
                background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
                transform: scale(1.01);
            }

        .category-table tbody td {
            padding: 1rem;
            border: none;
            vertical-align: middle;
        }

    .category-badge {
        background: #198754;
        color: #ffffff;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.85rem;
    }

    .btn-icon {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

        .btn-icon:hover {
            transform: scale(1.1);
        }

    .btn-edit {
        background: linear-gradient(135deg, #198754 0%, #157347 100%);
        color: #ffffff;
        border-color: #198754;
    }

        .btn-edit:hover {
            background: linear-gradient(135deg, #218838 0%, #1ea085 100%);
            color: white;
            box-shadow: 0 4px 15px rgba(40, 167, 69, 0.4);
        }

    .btn-delete {
        background: linear-gradient(135deg, #dc3545 0%, #b02a37 100%);
        color: #ffffff;
        border-color: #dc3545;
    }

        .btn-delete:hover {
            background: linear-gradient(135deg, #c82333 0%, #e55a00 100%);
            color: white;
            box-shadow: 0 4px 15px rgba(220, 53, 69, 0.4);
        }

    .empty-state {
        text-align: center;
        padding: 3rem 2rem;
        color: #6c757d;
    }

        .empty-state i {
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }

    .add-category-btn {
        background: linear-gradient(135deg, #16a34a 0%, #15803d 100%);
        border: none;
        color: #ffffff;
        padding: 0.75rem 2rem;
        border-radius: 25px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

        .add-category-btn:hover {
            color: #ffffff;
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(21, 128, 61, 0.35);
            text-decoration: none;
        }
</style>

<div class="cat-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="mb-2"><i class="fas fa-tags me-2"></i>Category Management</h1>
            <p class="mb-0 opacity-75">Organize your products with categories</p>
        </div>
        <span class="page-chip">@DateTime.Now.ToString("dd MMM yyyy")</span>
    </div>
</div>

<div class="d-flex justify-content-end mb-3">
    <a asp-action="AddEdit" asp-controller="ProductCategory" class="add-category-btn">
        <i class="fas fa-plus"></i> Add Category
    </a>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-sm border-success">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-th-large me-2"></i>Category Directory
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover datatable">
                            <thead class="table-success">
                                <tr>
                                    <th><i class="fas fa-id-badge me-1"></i>Category ID</th>
                                    <th><i class="fas fa-tag me-1"></i>Category Name</th>
                                    <th class="text-center"><i class="fas fa-cogs me-1"></i>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td><span class="badge bg-success">#@item.CategoryID</span></td>
                                            <td class="fw-bold text-dark">@item.CategoryName</td>
                                            <td class="text-center">
                                                <a asp-action="AddEdit" asp-controller="ProductCategory" asp-route-id="@item.CategoryID" class="btn btn-sm btn-outline-success me-1" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-controller="ProductCategory" asp-route-id="@item.CategoryID" class="btn btn-sm btn-outline-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this category?');">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-center text-muted py-4">
                                            <i class="fas fa-tags fs-1 text-muted mb-3 d-block"></i>
                                            <h5>No categories found</h5>
                                            <p class="text-muted">Start by adding your first category.</p>
                                            <a asp-action="AddEdit" asp-controller="ProductCategory" class="btn btn-success">
                                                <i class="fas fa-plus me-2"></i>Add First Category
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>