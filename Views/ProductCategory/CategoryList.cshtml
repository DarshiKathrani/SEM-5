@model List<ProductCategoryModel>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="fas fa-exclamation-triangle me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div class="pagetitle">
        <h1><i class="fas fa-tags text-success me-2"></i>Category Management</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")" class="text-success">Home</a></li>
                <li class="breadcrumb-item">Tables</li>
                <li class="breadcrumb-item active">Category Data</li>
            </ol>
        </nav>
    </div>
    <div>
        <a asp-action="AddEdit" asp-controller="ProductCategory" class="btn btn-success">
            <i class="fas fa-plus me-2"></i>Add Category
        </a>
    </div>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-sm border-success">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-th-large me-2"></i>Category Directory
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover datatable">
                            <thead class="table-success">
                                <tr>
                                    <th><i class="fas fa-id-badge me-1"></i>Category ID</th>
                                    <th><i class="fas fa-tag me-1"></i>Category Name</th>
                                    <th class="text-center"><i class="fas fa-cogs me-1"></i>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td><span class="badge bg-success">#@item.CategoryID</span></td>
                                            <td class="fw-bold text-dark">@item.CategoryName</td>
                                            <td class="text-center">
                                                <a asp-action="AddEdit" asp-controller="ProductCategory" asp-route-id="@item.CategoryID" class="btn btn-sm btn-outline-success me-1" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-controller="ProductCategory" asp-route-id="@item.CategoryID" class="btn btn-sm btn-outline-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this category?');">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-center text-muted py-4">
                                            <i class="fas fa-tags fs-1 text-muted mb-3 d-block"></i>
                                            <h5>No categories found</h5>
                                            <p class="text-muted">Start by adding your first category.</p>
                                            <a asp-action="AddEdit" asp-controller="ProductCategory" class="btn btn-success">
                                                <i class="fas fa-plus me-2"></i>Add First Category
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>