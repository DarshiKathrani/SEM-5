@model List<CustomerModel>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-grocery-success alert-dismissible fade show">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-grocery-danger alert-dismissible fade show">
        <i class="fas fa-exclamation-triangle me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="text-dark mb-1">
            <i class="fas fa-users text-primary me-2"></i>Customer Management
        </h2>
        <nav>
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "Home")">Home</a>
                </li>
                <li class="breadcrumb-item">Tables</li>
                <li class="breadcrumb-item active">Customer Data</li>
            </ol>
        </nav>
    </div>
    <div>
        <a asp-action="AddEdit" asp-controller="Customer" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Add Customer
        </a>
    </div>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-users me-2"></i>Customer Directory
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                                                 <table class="table table-striped table-hover mb-0 datatable">
                             <thead class="table-dark">
                                 <tr>
                                     <th>Customer ID</th>
                                     <th>Customer Name</th>
                                     <th>Phone</th>
                                     <th>Address</th>
                                     <th>Email</th>
                                     <th class="text-center">Actions</th>
                                 </tr>
                             </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                                                                         <td>
                                                 <strong class="text-primary">#@item.CustomerID.ToString().PadLeft(4, '0')</strong>
                                             </td>
                                             <td>
                                                 <div class="d-flex align-items-center">
                                                     <div class="avatar-circle me-2">
                                                         <i class="fas fa-user"></i>
                                                     </div>
                                                     <div>
                                                         <div class="fw-bold">@item.CustomerName</div>
                                                         <small class="text-muted">Active Customer</small>
                                                     </div>
                                                 </div>
                                             </td>
                                             <td>
                                                 <a href="tel:@item.Phone" class="text-decoration-none">
                                                     <i class="fas fa-phone text-success me-1"></i>@item.Phone
                                                 </a>
                                             </td>
                                             <td>
                                                 <i class="fas fa-map-marker-alt text-primary me-1"></i>@item.Address
                                             </td>
                                             <td>
                                                 @if (!string.IsNullOrEmpty(item.Email))
                                                 {
                                                     <a href="mailto:@item.Email" class="text-decoration-none">
                                                         <i class="fas fa-envelope text-info me-1"></i>@item.Email
                                                     </a>
                                                 }
                                                 else
                                                 {
                                                     <span class="text-muted">
                                                         <i class="fas fa-minus me-1"></i>No email
                                                     </span>
                                                 }
                                             </td>
                                             <td class="text-center">
                                                 <a asp-action="AddEdit" asp-controller="Customer" asp-route-id="@item.CustomerID" 
                                                    class="btn btn-sm btn-outline-primary me-1" title="Edit Customer">
                                                     <i class="fas fa-edit"></i>
                                                 </a>
                                                 <a asp-action="Delete" asp-controller="Customer" asp-route-id="@item.CustomerID" 
                                                    class="btn btn-sm btn-outline-danger" title="Delete Customer"
                                                    onclick="return confirm('Are you sure you want to delete this customer?');">
                                                     <i class="fas fa-trash"></i>
                                                 </a>
                                             </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                                                         <tr>
                                         <td colspan="6" class="text-center py-5">
                                             <i class="fas fa-users-slash text-muted" style="font-size: 48px;"></i>
                                             <h5 class="mt-3 text-muted">No Customers Found</h5>
                                             <p class="text-muted">You haven't added any customers yet.</p>
                                             <a asp-action="AddEdit" asp-controller="Customer" class="btn btn-primary">
                                                 <i class="fas fa-plus me-2"></i>Add First Customer
                                             </a>
                                         </td>
                                     </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/table-functions.js"></script>
    <script>
        // Auto-dismiss alerts only
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                if (window.bootstrap && window.bootstrap.Alert) {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }
            });
        }, 5000);
    </script>
}

<style>
    .avatar-circle {
        width: 32px;
        height: 32px;
        background: #007bff;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 14px;
    }
</style>