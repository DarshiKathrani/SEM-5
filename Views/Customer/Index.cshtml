        line-height: 1.4;
    }

    /* Action Buttons */
    .action-buttons .btn-group {
        gap: 2px;
    }

    .action-buttons .btn {
        padding: 6px 10px;
        font-size: 12px;
        border-radius: 4px;
    }

    /* Table Footer */
    .table-footer {
        padding: 20px 25px;
        background: #f8f9fa;
        border-radius: 0 0 15px 15px;
        border-top: 1px solid #eee;
    }

    /* Empty State */
