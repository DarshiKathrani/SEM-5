        text-align: center;
        padding: 60px 40px;
    }

    .empty-state-icon {
        font-size: 64px;
        color: #ddd;
        margin-bottom: 20px;
    }

    .empty-state-title {
        color: var(--text-dark);
        margin-bottom: 10px;
    }

